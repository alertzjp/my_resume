<!-- 项目经验组件模板 -->
<view class='project-item'>
  <view class='project-title'>
    <view></view>
    <text>{{projectNum}}</text>
    <view></view>
  </view>

  <view class='project-box'>
    <text class='project-name'>{{projectName}}</text>
    <text class='tag' bindtap='copyDemo'>{{projectType}}</text>
    <view>
      <text class='project-subname'>项目描述：</text>
      <view class='explain'>
        <text>{{projectDesc}}</text>
      </view>
      <view></view>
    </view>
    <view>
      <text class='project-subname'>负责内容：</text>
      <view class='explain'>
        <text>{{skillDesc}}</text>
      </view>
      <view></view>
    </view>
    <view>
      <text class='project-subname'>项目难点：</text>
      <view class='explain'>
        <text>{{responsibilityDesc}}</text>
      </view>
      <view></view>
    </view>
     <view>
      <text class='project-subname'>项目成果：</text>
      <view class='explain'>
        <text>{{projectResult}}</text>
      </view>
      <view></view>
    </view>
  </view>
</view>